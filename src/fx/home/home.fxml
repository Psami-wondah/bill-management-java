<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane alignment="CENTER"
           prefHeight="400.0" prefWidth="600.0"
           maxWidth="600"
           xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="fx.home.HomeController"
           style="-fx-background-color: #ffffff;">

    <children>
        <!-- Centered card -->
        <VBox spacing="16" alignment="CENTER"
              maxWidth="600"
              
              style="-fx-background-color: white;
                     -fx-background-radius: 16;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 18, 0.2, 0, 4);">
            <padding>
                <Insets top="24" right="24" bottom="24" left="24"/>
            </padding>

            <!-- Title -->
            <Label fx:id="label"
                   text="Welcome Back!"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <!-- Subtitle -->
            <Label text="Enter your password to continue"
                   wrapText="true"
                   style="-fx-text-fill: #666666; -fx-font-size: 12px;"/>

            <!-- Password field -->
            <PasswordField fx:id="passwordField"
                           promptText="Password"
                           maxWidth="Infinity"
                           style="-fx-font-size: 14px;"/>

            <!-- Extra options + button row -->
            <HBox spacing="10" alignment="CENTER_RIGHT" maxWidth="Infinity">

                <Button fx:id="submitButton"
                        text="Continue"
                        mnemonicParsing="false"
                        defaultButton="true"
                        style="-fx-background-radius: 20;
                               -fx-padding: 8 18;
                               -fx-font-weight: bold;"/>
            </HBox>

            <!-- Helper / status text -->
            <Label fx:id="statusLabel"
                   text=""
                   wrapText="true"
                   style="-fx-text-fill: #9e9e9e; -fx-font-size: 11px;"/>
        </VBox>
    </children>
</StackPane>
