<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      stylesheets="@/fx/global.css"
      fx:controller="fx.addTariff.AddTariffController"
      prefWidth="600.0"
      spacing="18"
      style="-fx-background-color: white;
             -fx-background-radius: 16;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.16), 18, 0.2, 0, 4);">

    <padding>
        <Insets top="24" right="24" bottom="24" left="24"/>
    </padding>

    <children>

        <!-- Header -->
        <HBox spacing="8" alignment="CENTER_LEFT">
            <children>
                <!-- Accent bar -->
                <Region prefWidth="4" maxWidth="4" prefHeight="26"
                        style="-fx-background-color: #4A90E2; -fx-background-radius: 999;"/>
                <VBox spacing="4">
                    <children>
                        <Label fx:id="label"
                               text="Add New Tariff"
                               style="-fx-font-size: 20px;
                                      -fx-font-weight: bold;
                                      -fx-text-fill: #1C1C1E;"/>
                        <Label text="Create a new tariff with pricing details."
                               style="-fx-font-size: 11px;
                                      -fx-text-fill: #6E6E73;"/>
                    </children>
                </VBox>
                         <Region HBox.hgrow="ALWAYS"/>

                <Button text="Back"
                        fx:id="backButton"
                        onAction="#onBack"
                        styleClass="back-btn"
                        />
            </children>
        </HBox>

        <Separator/>

        <VBox spacing="16">
            <children>


                <!-- Meter details card -->
                <VBox spacing="10"
                      style="-fx-background-color: #F6F7FB;
                             -fx-background-radius: 10;
                             -fx-padding: 14;">
                    <children>
                        <Label text="Meter details"
                               style="-fx-font-size: 13px;
                                      -fx-font-weight: bold;
                                      -fx-text-fill: #1C1C1E;"/>

                        <Label text="Enter meter configuration for this customer."
                               style="-fx-text-fill: #6E6E73;
                                      -fx-font-size: 11px;"/>

                        <GridPane hgap="12" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints prefWidth="120"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>

                            <children>
                                <Label text="Name:"
                                       GridPane.rowIndex="0" GridPane.columnIndex="0"
                                       style="-fx-text-fill: #1C1C1E; -fx-font-size: 12px;"/>
                                <TextField fx:id="nameField"
                                           promptText="Flex One"
                                           GridPane.rowIndex="0" GridPane.columnIndex="1"
                                           maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                           style="-fx-background-radius: 6;
                                                  -fx-border-radius: 6;
                                                  -fx-border-color: #E1E3E6;
                                                  -fx-padding: 6 8 6 8;"/>

                                <Label text="Fuel Type:"
                                       GridPane.rowIndex="1" GridPane.columnIndex="0"
                                       style="-fx-text-fill: #1C1C1E; -fx-font-size: 12px;"/>
                                <ComboBox fx:id="fuelTypeComboBox"
                                          promptText="Select fuel type"
                                          GridPane.rowIndex="1" GridPane.columnIndex="1"
                                          maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                          minWidth="350"
                                          style="-fx-background-radius: 6;
                                                 -fx-border-radius: 6;
                                                 -fx-border-color: #E1E3E6;
                                                 -fx-padding: 2 8 2 8;"/>

                                <Label text="Rate Type:"
                                       GridPane.rowIndex="2" GridPane.columnIndex="0"
                                       style="-fx-text-fill: #1C1C1E; -fx-font-size: 12px;"/>
                                <ComboBox fx:id="rateTypeComboBox"
                                          promptText="Select rate type"
                                          GridPane.rowIndex="2" GridPane.columnIndex="1"
                                          maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                          minWidth="350"
                                          style="-fx-background-radius: 6;
                                                 -fx-border-radius: 6;
                                                 -fx-border-color: #E1E3E6;
                                                 -fx-padding: 2 8 2 8;"/>

                                <Label text="Single Rate:"
                                       GridPane.rowIndex="3" GridPane.columnIndex="0"
                                       style="-fx-text-fill: #1C1C1E; -fx-font-size: 12px;"/>
                                <TextField fx:id="singleRateField"
                                           promptText="Enter single rate"
                                           GridPane.rowIndex="3" GridPane.columnIndex="1"
                                           maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                           style="-fx-background-radius: 6;
                                                  -fx-border-radius: 6;
                                                  -fx-border-color: #E1E3E6;
                                                  -fx-padding: 6 8 6 8;"/>

                                <Label text="Day Rate:"
                                       GridPane.rowIndex="4" GridPane.columnIndex="0"
                                       style="-fx-text-fill: #1C1C1E; -fx-font-size: 12px;"/>
                                <TextField fx:id="dayRateField"
                                           promptText="Enter day rate"
                                           GridPane.rowIndex="4" GridPane.columnIndex="1"
                                           maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                           style="-fx-background-radius: 6;
                                                  -fx-border-radius: 6;
                                                  -fx-border-color: #E1E3E6;
                                                  -fx-padding: 6 8 6 8;"/>


                                <Label text="Night Rate:"
                                       GridPane.rowIndex="5" GridPane.columnIndex="0"
                                       style="-fx-text-fill: #1C1C1E; -fx-font-size: 12px;"/>
                                <TextField fx:id="nightRateField"
                                           promptText="Enter night rate"
                                           GridPane.rowIndex="5" GridPane.columnIndex="1"
                                           maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                           style="-fx-background-radius: 6;
                                                  -fx-border-radius: 6;
                                                  -fx-border-color: #E1E3E6;
                                                  -fx-padding: 6 8 6 8;"/>

                                   <Label text="Daily Standing Charge:"
                                       GridPane.rowIndex="6" GridPane.columnIndex="0"
                                       style="-fx-text-fill: #1C1C1E; -fx-font-size: 12px;"/>
                                <TextField fx:id="dailyStandingChargeField"
                                           promptText="Enter daily standing charge"
                                           GridPane.rowIndex="6" GridPane.columnIndex="1"
                                           maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                           style="-fx-background-radius: 6;
                                                  -fx-border-radius: 6;
                                                  -fx-border-color: #E1E3E6;
                                                  -fx-padding: 6 8 6 8;"/>

                            <Label text="VAT Rate:"
                                       GridPane.rowIndex="7" GridPane.columnIndex="0"
                                       style="-fx-text-fill: #1C1C1E; -fx-font-size: 12px;"/>
                                <TextField fx:id="vatRateField"
                                           promptText="Enter VAT rate %"
                                           GridPane.rowIndex="7" GridPane.columnIndex="1"
                                           maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                           style="-fx-background-radius: 6;
                                                  -fx-border-radius: 6;
                                                  -fx-border-color: #E1E3E6;
                                                  -fx-padding: 6 8 6 8;"/>


                                <Label text="Effective From:"
                                       GridPane.rowIndex="8" GridPane.columnIndex="0"
                                       style="-fx-text-fill: #1C1C1E; -fx-font-size: 12px;"/>
                                <DatePicker fx:id="effectiveFromField"
                                            GridPane.rowIndex="8" GridPane.columnIndex="1"
                                            maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                            minWidth="350"
                                            style="-fx-background-radius: 6;
                                                   -fx-border-radius: 6;
                                                   -fx-border-color: #E1E3E6;
                                                   -fx-padding: 2 8 2 8;"/>

                                <Label text="Effective To:"
                                       GridPane.rowIndex="9" GridPane.columnIndex="0"
                                       style="-fx-text-fill: #1C1C1E; -fx-font-size: 12px;"/>
                                <DatePicker fx:id="effectiveToField"
                                            GridPane.rowIndex="9" GridPane.columnIndex="1"
                                            maxWidth="Infinity" HBox.hgrow="ALWAYS"
                                            minWidth="350"
                                            style="-fx-background-radius: 6;
                                                   -fx-border-radius: 6;
                                                   -fx-border-color: #E1E3E6;
                                                   -fx-padding: 2 8 2 8;"/>
                            </children>
                        </GridPane>
                    </children>
                </VBox>

                <!-- Actions -->
                <HBox alignment="CENTER_RIGHT" spacing="8">
                    <children>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Cancel"
                                fx:id="cancelButton"
                                onAction="#onCancel"
                                styleClass="card-btn-danger"/>
                        <Button text="Save"
                                fx:id="submitButton"
                                onAction="#onSubmit"
                                styleClass="card-btn"/>
                    </children>
                </HBox>

            </children>
        </VBox>

    </children>
</VBox>
